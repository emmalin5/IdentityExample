@page
@model IdentityFrame.Pages.Account.LoginModel
@{
}


<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credentials.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credentials.Name" class="form-control" /> 
            </div>
            <span class="text-danger" asp-validation-for="Credentials.Name"></span>
           </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credentials.Password"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credentials.Password" class="form-control" />
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Credentials.Password"></span>
        <div class="form-group row">
            <div class="col-3">
               <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">
                </div>
        </div>
    </form>
</div>